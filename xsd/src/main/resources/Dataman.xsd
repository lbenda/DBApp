<xsd:schema version="1.0"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:dmc="http://www.lbenda.cz/dataman/schema/Dataman"
            xmlns:dt="http://www.lbenda.cz/dataman/schema/DataTypes"
            targetNamespace="http://www.lbenda.cz/dataman/schema/Dataman"
            elementFormDefault="qualified">
  <xsd:import namespace="http://www.lbenda.cz/dataman/schema/DataTypes" schemaLocation="DataTypes.xsd" />

  <xsd:element name="dataman" type="dmc:datamanType"/>
  <xsd:element name="sessions" type="dmc:sessionsType"/>
  <xsd:element name="session" type="dmc:sessionType"/>

  <xsd:complexType name="datamanType">
    <xsd:sequence>
      <xsd:element name="sessions" type="dmc:sessionsType" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="sessionsType">
    <xsd:sequence>
      <xsd:element name="session" type="dmc:sessionType" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="sessionType">
    <xsd:annotation><xsd:documentation>Configuration of single connection</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="connectionTimeout" type="xsd:int" minOccurs="0" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Timeout for connection</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="jdbc" type="dmc:jdbcType" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>JDBC configuration</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="extendedConfig" type="dmc:extendedConfigType" minOccurs="0" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Extended configuration of session</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="libraries" type="dmc:librariesType" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Libraries with JDBC driver</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="structure" type="dmc:databaseStructureType" minOccurs="0" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Cached structure</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:ID">
      <xsd:annotation><xsd:documentation>Identifier and name of session configuration</xsd:documentation></xsd:annotation>
    </xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="extendedConfigType">
    <xsd:annotation><xsd:documentation>Link to extended configuration</xsd:documentation></xsd:annotation>
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:annotation><xsd:documentation>Path to file with configuration or to table with configuration (with point notation catalog.schema.table).</xsd:documentation></xsd:annotation>
        <xsd:attribute name="type" type="dmc:extendedConfigTypeType">
          <xsd:annotation><xsd:documentation>Type how is extend configuration stored.</xsd:documentation></xsd:annotation>
        </xsd:attribute>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

  <xsd:simpleType name="extendedConfigTypeType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="NONE">
        <xsd:annotation><xsd:documentation>No extend configuration</xsd:documentation></xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="DATABASE">
        <xsd:annotation><xsd:documentation>Extend configuration is stored in database</xsd:documentation></xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="FILE">
        <xsd:annotation><xsd:documentation>Extend configuration is stored in XML file</xsd:documentation></xsd:annotation>
      </xsd:enumeration>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:complexType name="jdbcType">
    <xsd:annotation><xsd:documentation>Libraries which contains JDBC driver</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="driverClass" type="xsd:string" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Class of JDBC driver</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="user" type="xsd:string" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Username for connection to database</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="password" type="xsd:string" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Password for connecting to database</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="url" type="xsd:string" minOccurs="1" maxOccurs="1">
        <xsd:annotation><xsd:documentation>Connecting URL for connection to database</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="librariesType">
    <xsd:annotation><xsd:documentation>Libraries which contains JDBC driver</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="library" type="xsd:string" minOccurs="0" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Path to single library</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="databaseStructureType">
    <xsd:annotation><xsd:documentation>Stored structure of database</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="catalog" type="dmc:catalogType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Catalogs in database</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="catalogType">
    <xsd:annotation><xsd:documentation>Stored structure of catalog</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="schema" type="dmc:schemaType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Schemas in catalog</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string"><xsd:annotation><xsd:documentation>Name of catalog</xsd:documentation></xsd:annotation></xsd:attribute>
  </xsd:complexType>

  <xsd:complexType name="schemaType">
    <xsd:annotation><xsd:documentation>Stored structure of schema</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="table" type="dmc:tableType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Schemas in catalog</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string"><xsd:annotation><xsd:documentation>Name of schema</xsd:documentation></xsd:annotation></xsd:attribute>
    <xsd:attribute name="label" type="xsd:string"/>
  </xsd:complexType>

  <xsd:complexType name="tableType">
    <xsd:annotation><xsd:documentation>Stored structure of table</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="column" type="dmc:columnType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Table in catalog</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="foreignKey" type="dmc:foreignKeyType" minOccurs="0" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>List of all foreign keys which is constraint on this table</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:ID" />
    <xsd:attribute name="name" type="xsd:string"><xsd:annotation><xsd:documentation>Name of table</xsd:documentation></xsd:annotation></xsd:attribute>
    <xsd:attribute name="tableType" type="xsd:string"/>
    <xsd:attribute name="label" type="xsd:string"/>
  </xsd:complexType>

  <xsd:complexType name="columnType">
    <xsd:annotation><xsd:documentation>Stored structure of column</xsd:documentation></xsd:annotation>
    <xsd:attribute name="id" type="xsd:ID" />
    <xsd:attribute name="name" type="xsd:string"><xsd:annotation><xsd:documentation>Name of column</xsd:documentation></xsd:annotation></xsd:attribute>
    <xsd:attribute name="dataType" type="dt:dataTypeType"/>
    <xsd:attribute name="size" type="xsd:int"/>
    <xsd:attribute name="scale" type="xsd:int"/>
    <xsd:attribute name="nullable" type="xsd:boolean"/>
    <xsd:attribute name="autoincrement" type="xsd:boolean"/>
    <xsd:attribute name="generated" type="xsd:boolean"/>
    <xsd:attribute name="label" type="xsd:string"/>
    <xsd:attribute name="isPK" type="xsd:boolean"/>
  </xsd:complexType>

  <xsd:complexType name="foreignKeyType">
    <xsd:annotation><xsd:documentation>Stored structure of foreign key</xsd:documentation></xsd:annotation>
    <xsd:sequence>
      <xsd:element name="slaveColumn" type="dmc:foreignKeyColumnType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Slave columns in foreign key</xsd:documentation></xsd:annotation>
      </xsd:element>
      <xsd:element name="masterColumn" type="dmc:foreignKeyColumnType" minOccurs="1" maxOccurs="unbounded">
        <xsd:annotation><xsd:documentation>Master columns in foreign key</xsd:documentation></xsd:annotation>
      </xsd:element>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string"><xsd:annotation><xsd:documentation>Name of constraint</xsd:documentation></xsd:annotation></xsd:attribute>
    <xsd:attribute name="masterTable" type="xsd:IDREF"/>
  </xsd:complexType>

  <xsd:complexType name="foreignKeyColumnType">
    <xsd:attribute name="column" type="xsd:IDREF"/>
  </xsd:complexType>

</xsd:schema>
